TESTSELECT: PROCEDURE <beginfold id='1'>/*</beginfold id='1'> TESTING SELECT <endfold id='1'>*/</endfold id='1'> 
 PARSE ARG NUM CAR .                       
 SELECT                                    
   WHEN NUM < 25 THEN                      
     STATUS = "25%"                        
   WHEN NUM < 50 THEN                      
     DO                                    
       IF CAR = 'RAD' THEN                 
          STATUS = 'DOPE'                  
